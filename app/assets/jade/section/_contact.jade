footer#contact.m-footer.l-section--dark
  .l-wrap.l-wrap--section

    h2.m-footer__title.t-h2
      span.t-gradient--2.t-gradient--small Stay Connected

    .m-subscribe
      p.m-subscribe__text.t-lead We publish interesting stuff. Be part of it. 

      form.m-subscribe__form.o-form
        input.o-input(type="text", placeholder="Your e-mail address")
        span.m-subscribe__submit.o-iconed--basic.ss-plus.right
          input.o-submit(type="submit", value="Subscribe")
      .m-subscribe__hint
        span.m-subscribe__note or 
        a.o-button--text.o-button--big.ss-navigateright.right(href="http://littlegreta.co.uk/newsletter/august") View the latest newsletter

  .l-section--black
    .o-social.l-wrap.l-wrap--small.l-wrap--section
      strong.o-social__title.t-caps We&rsquo;re social, too!

      ul.o-social__list
        li.o-social__item--twitter
          a.o-social__link--twitter(href="https://twitter.com/littlegretacz")
            .o-social__icon.o-icon--b.ss-twitter.ss-social
            span.o-social__caption Twitter
        li.o-social__item--youtube
          a.o-social__link--youtube(href="http://www.youtube.com/user/LittleGreta")
            .o-social__icon.o-icon--b.ss-youtube.ss-social
            span.o-social__caption YouTube channel
        li.o-social__item--tumblr
          a.o-social__link--tumblr(href="http://littlegreta.tumblr.com")
            .o-social__icon.o-icon--b.ss-tumblr.ss-social
            span.o-social__caption Tumblr blog

  .m-contact.l-wrap.l-wrap--section
    h3.m-contact__title.t-h3
      span.t-gradient--dark Get in Touch

    .m-contact__list

      each item, index in contact
        .m-contact__item
          h5.m-contact__name.t-h5
            span(class="t-underline--#{index + 1}") #{item.name}
          .m-contact__details
            ul
              each line in item.address
                li= line
            ul
              each line in item.contact
                li= line
          a.m-contact__button.o-button--text.ss-mail(href="mailto:#{item.email}", class="m-contact__button--#{index + 1}") Contact #{item.person}

    small.m-footer__note.t-small &copy; 2015 Little Greta Ltd.
