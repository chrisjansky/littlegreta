block template-variables
  - var pageSettings = {title: "Little Greta &mdash; Creative Agency", description: "Little Greta is a Czech Republic based creative team offering a full remit of marketing communication and design services."}

doctype
html.no-js(lang="en")
  head
    block template-head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")

      title!= pageSettings.title

      meta(name="description", content=pageSettings.description)
      meta(name="viewport" content="width=device-width, initial-scale=1.0")

    script(type="text/javascript", src="//use.typekit.net/qnq6yfj.js")
    script(type="text/javascript") try{Typekit.load();}catch(e){}

  body
    block template-body

    block template-content
      p Hello.

    block template-foot
      script(src="http://code.jquery.com/jquery-latest.min.js")
        
      <!-- build:remove -->
      script window.jQuery || document.write("<script src='../bower_components/jquery/dist/jquery.js'><\/script>")
      <!-- endbuild -->
