extends templates/_site

block template-content
  +sticky("contact-us")

  .m-intro.blur--purple
    a.m-intro__logo.o-logo--normal(href="index")
      include ../svg/logo_symbol.svg
      strong.o-logo__text Little Greta
    h1.m-intro__text We are a mere e-mail away from starting something amazing together.
    +introNav("contact-us")

  section.o-hero
    img.o-hero__image(data-src="assets/images/map_gradient1.jpg", data-lazy, alt="Little Greta Office Locations")

  include section/_contact

  include partial/_social

  section.l-section--dark
    .l-wrap
      .m-subscribe
        h3.m-subscribe__title.t-h3
          span.t-gradient--2 Stay Connected

        p.m-subscribe__text.t-lead We publish interesting stuff. Be part of it.

        include partial/_mailchimp.html
