extends templates/_site

block template-content
  +sticky("index")

  .m-intro
    a.m-intro__logo.o-logo--normal(href="index.html")
      include ../svg/logo_symbol.svg
    h1.m-intro__title We are #[strong Little Greta], #[br]a multidisciplinary agency helping brands launch, relaunch and grow.
    +introNav("index")

  .m-news
    each item in [1, 2, 3]
      a.m-news__item(href="javascript:")
        .m-news__overlay
          h2.m-news__title
            faker-name-title/
          strong.m-news__hint View Success Story
        img.m-news__image(data-src="http://source.unsplash.com/random/1920x1000?sig=" + item, data-lazy, alt="Placeholder")

  +about("short")
  include section/_portfolio
  
  footer.m-footer.l-section--dark
    include partial/_social
    include section/_contact--short
