extends templates/_site

block template-content
  +sticky("index")

  .m-intro.blur--blue
    a.m-intro__logo.o-logo--normal(href="index")
      include ../svg/logo_symbol.svg
    h1.m-intro__title We are #[strong Little Greta], <br>an award-winning agency helping brands launch, relaunch and grow.
    +introNav("index")

  .m-news
    .m-news__container
      each image, index in ["pMEGruJJ6Ko", "eHD8Y1Znfpk", "gz5T9K0joRQ"]
        +newsItem(image, index)

    .m-news__outro
      a.m-news__button(href="news-archive") View Older

  +about("short")
  include section/_featured
  
  .m-end
    .m-locations(data-ruscha="#FF0000, #FFAA00, #00FFAA, #0001B3, #FF8000, #0080FF" data-orb="#08194D, blue")
      .m-locations__body
        h1.m-locations__text(data-inview="short") We have offices in the <mark data-mark data-present="container">UK</mark>, <mark data-mark data-present="container">Germany</mark>, the <mark data-mark data-present="container">USA</mark>, and the <mark data-mark data-present="container">Czech Republic</mark>, where Little Greta originates and where much of our team and infrastructure remains.
        .m-locations__actions
          a.m-locations__button--primary(href="mailto:info@littlegreta.co.uk" data-inview="short") <span class="m-locations__arrow">&rarr;</span>&thinsp;Get in Touch
          a.m-locations__button--secondary(href="contact-us.html" data-inview="short") <span class="m-locations__arrow">&rarr;</span>&thinsp;Our Locations

    +footer("index")
