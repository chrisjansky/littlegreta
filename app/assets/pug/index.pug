extends templates/_site

block template-content
  +sticky("index")

  .m-intro.blur--blue
    a.m-intro__logo.o-logo--normal(href="index")
      include ../svg/logo_symbol.svg
    h1.m-intro__title We are #[strong Little Greta], #[br]a multidisciplinary agency helping brands launch, relaunch and grow.
    +introNav("index")

  .m-news
    each item in ["pMEGruJJ6Ko", "eHD8Y1Znfpk", "gz5T9K0joRQ"]
      a.m-news__item(href="case-study")
        .m-news__overlay
          h2.m-news__title
            faker-name-title/
          strong.m-news__hint Read Success Story
        img.m-news__image(data-src="http://source.unsplash.com/" + item + "/1440x810", data-srcset="http://source.unsplash.com/" + item + "/800x450 800w, http://source.unsplash.com/" + item + "/1440x810 1440w, http://source.unsplash.com/" + item + "/1920x1080 1920w, http://source.unsplash.com/" + item + "/2880x1620 2880w", data-lazy, alt="Placeholder")

  +about("short")
  include section/_featured
  
  .m-locations
    .m-locations__wrap
      h2.m-locations__title Get in Touch

      .m-locations__outro
        p We have offices in the UK, Germany, the USA, and the Czech Republic, where Little Greta originates and where much of our team and infrastructure remains.
        .m-locations__actions
          a.m-locations__button--primary(href="mailto:info@littlegreta.co.uk") Get in Touch
          a.m-locations__button--secondary(href="contact-us.html") Our Locations

  +footer("index")
