section.m-people
  .m-people__wrap

    h3.m-people__title
      span.t-gradient--3.t-gradient--small Our people
      | &thinsp;&hellip;

    .m-people__list
      each group in departments

        - var memberCount = 5
        case group.title
          when "sales"
            - memberCount = 4
          when "creative"
            - memberCount = 11

        - var i = 0
        while i < memberCount

          - var random = Math.floor((Math.random() * 2))
          - var person = group.members[random]

          article.o-person
            .o-person__portrait.o-circle
              img.o-person__image(src="assets/images/people/" + person.image, alt="Portrait of " + person.name)

            .o-person__info
              strong.o-person__name= person.name
              small.o-person__position!= person.position
          - i++
