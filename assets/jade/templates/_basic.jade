block template-variables
  - var pageSettings = {title: "Little Greta &mdash; Creative Agency", description: "Little Greta is a Czech Republic based creative team offering a full remit of marketing communication and design services."}

doctype
html.no-js(lang="en")
  head
    block template-head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
      title!= pageSettings.title
      meta(name="description", content=pageSettings.description)
      meta(name="viewport" content="width=device-width, initial-scale=1.0")

    <!-- build:css assets/css/style-min.css -->
    link(rel="stylesheet", href="bower_components/normalize-css/normalize.css")

    link(rel="stylesheet", href="assets/css/vendor/royalslider.css")

    link(rel="stylesheet", href="assets/css/style.css")
    <!-- endbuild -->

    link(rel="shortcut icon", href="assets/favicon.ico")

    <!-- build:js assets/js/vendor-min.js -->
    script(src="bower_components/modernizr/modernizr.js")
    <!-- endbuild -->

    script(type="text/javascript", src="//use.typekit.net/qnq6yfj.js")
    script(type="text/javascript") try{Typekit.load();}catch(e){}

  body
    block template-body
      include /bower_components/chj-framework/assets/jade/mixins/_dummy

    script(src="http://code.jquery.com/jquery-latest.min.js")
        
    <!-- build:remove -->
    script window.jQuery || document.write("<script src='bower_components/jquery/dist/jquery.js'><\/script>")
    <!-- endbuild -->

    <!-- build:js assets/js/app-min.js -->
    script(src="bower_components/jquery-easing-original/jquery.easing.1.3.js")
    script(src="bower_components/jquery-waypoints/lib/jquery.waypoints.js")

    script(src="bower_components/imagesloaded/imagesloaded.pkgd.js")
    script(src="bower_components/masonry/dist/masonry.pkgd.js")

    script(src="bower_components/gsap/src/uncompressed/TweenMax.js")
    script(src="bower_components/ScrollMagic/js/jquery.scrollmagic.js")
    script(src="bower_components/ScrollMagic/js/jquery.scrollmagic.debug.js")

    script(src="bower_components/moment/moment.js")
    script(src="bower_components/livestampjs/livestamp.js")

    script(src="assets/js/vendor/jquery.royalslider.js")
    script(src="assets/js/vendor/jquery.rs.active-class.js")
    script(src="assets/js/vendor/jquery.rs.visible-nearby.js")

    script(src="bower_components/chj-framework/assets/js/chj-detect.js")

    script(src="assets/js/lg-base.js")
    script(src="assets/js/lg-royal.js")
    script(src="assets/js/lg-waypoints.js")
    script(src="assets/js/lg-tumblr.js")
    script(src="assets/js/lg-main.js")
    script(src="assets/js/lg-logo.js")
    script(src="assets/js/lg-scrollmagic.js")
    script(src="assets/js/lg-scrollto.js")
    script(src="assets/js/lg-resize.js")
    <!-- endbuild -->
